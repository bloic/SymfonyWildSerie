<form method="post" action="{{ path('program_comment_delete', {program: program.id , season: season.id, episode: episode.id, 'id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn btn-secondary">Delete</button>
</form>